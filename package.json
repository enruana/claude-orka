{
  "name": "claude-orka",
  "version": "1.0.0",
  "description": "SDK for orchestrating Claude Code sessions with tmux - Branch management for conversations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "orka": "./bin/orka.js"
  },
  "scripts": {
    "build": "tsc",
    "build:electron": "tsc && npm run copy:renderer",
    "copy:renderer": "mkdir -p dist/electron/renderer && cp -r electron/renderer/*.html electron/renderer/*.css electron/renderer/*.js dist/electron/renderer/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "orka": "tsx src/cli/index.ts",
    "cli:link": "npm link",
    "cli:unlink": "npm unlink -g claude-orka",
    "electron": "npm run build:electron && electron .",
    "electron:dev": "npm run build:electron && electron . --dev",
    "type-check": "tsc --noEmit",
    "package": "npm run build:electron && electron-builder",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "tmux",
    "orchestrator",
    "sdk",
    "branching",
    "context-management",
    "session-management",
    "ai",
    "cli"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/claude-orka.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/claude-orka/issues"
  },
  "homepage": "https://github.com/yourusername/claude-orka#readme",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.46",
    "@types/uuid": "^10.0.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "execa": "^5.1.1",
    "fs-extra": "^11.2.0",
    "nanoid": "^3.3.7",
    "ora": "^9.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.claudeorka.app",
    "productName": "Claude Orka",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
