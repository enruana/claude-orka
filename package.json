{
  "name": "@enruana/claude-orka",
  "version": "0.4.4",
  "description": "SDK for orchestrating Claude Code sessions with tmux - Branch management for conversations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "orka": "./bin/orka.js"
  },
  "scripts": {
    "build": "npm run build:sdk && npm run build:cli && npm run build:electron-main && npm run build:ui",
    "build:sdk": "tsc",
    "build:cli": "esbuild src/cli/index.ts --bundle --platform=node --format=esm --outfile=dist/cli.js --external:@anthropic-ai/claude-agent-sdk --external:chalk --external:cli-table3 --external:commander --external:execa --external:fs-extra --external:nanoid --external:ora --external:uuid --external:electron --external:react --external:react-dom --external:reactflow --external:lucide-react --external:readline",
    "build:electron-main": "esbuild electron/main/main.ts --bundle --platform=node --format=esm --outfile=dist/electron/main/main.js --external:electron --external:chokidar --external:fs-extra --external:execa --external:@anthropic-ai/claude-agent-sdk --external:uuid --external:nanoid && esbuild electron/preload/preload.ts --bundle --platform=node --format=cjs --outfile=dist/electron/preload/preload.js --external:electron",
    "build:ui": "cd electron/renderer && vite build",
    "build:electron": "tsc && npm run copy:renderer",
    "copy:renderer": "mkdir -p dist/electron/renderer && cp -r electron/renderer/*.html electron/renderer/*.css electron/renderer/*.js dist/electron/renderer/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "orka": "tsx src/cli/index.ts",
    "cli:link": "npm link",
    "cli:unlink": "npm unlink -g claude-orka",
    "ui:dev": "vite electron/renderer",
    "electron": "npm run build:electron && electron .",
    "electron:dev": "npm run build:electron && electron . --dev",
    "type-check": "tsc --noEmit",
    "package": "npm run build:electron && electron-builder",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "tmux",
    "orchestrator",
    "sdk",
    "branching",
    "context-management",
    "session-management",
    "ai",
    "cli"
  ],
  "author": "enruana",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enruana/claude-orka.git"
  },
  "bugs": {
    "url": "https://github.com/enruana/claude-orka/issues"
  },
  "homepage": "https://github.com/enruana/claude-orka#readme",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.46",
    "@types/uuid": "^10.0.0",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "electron": "^28.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.554.0",
    "nanoid": "^3.3.7",
    "ora": "^9.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reactflow": "^11.11.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^6.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.claudeorka.app",
    "productName": "Claude Orka",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
