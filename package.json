{
  "name": "claude-orka",
  "version": "1.0.0",
  "description": "SDK para orquestar sesiones de Claude Code con tmux - Branch management para conversaciones",
  "main": "dist/electron/main/main.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:electron": "tsc && npm run copy:renderer",
    "copy:renderer": "mkdir -p dist/electron/renderer && cp -r electron/renderer/*.html electron/renderer/*.css electron/renderer/*.js dist/electron/renderer/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "electron": "npm run build:electron && electron .",
    "electron:dev": "npm run build:electron && electron . --dev",
    "type-check": "tsc --noEmit",
    "package": "npm run build:electron && electron-builder"
  },
  "keywords": [
    "claude",
    "tmux",
    "orchestrator",
    "sdk",
    "branching",
    "context-management",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "execa": "^5.1.1",
    "nanoid": "^3.3.7",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.claudeorka.app",
    "productName": "Claude Orka",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
